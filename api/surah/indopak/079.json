{"surah":"79", "verses": [{"verse_key":"79:1","id":5713,"text":"وَالنّٰزِعٰتِ غَرۡقًا ۙ\u200F"},
{"verse_key":"79:2","id":5714,"text":"وَّالنّٰشِطٰتِ نَشۡطًا ۙ\u200F"},
{"verse_key":"79:3","id":5715,"text":"وَّالسّٰبِحٰتِ سَبۡحًا ۙ\u200F"},
{"verse_key":"79:4","id":5716,"text":"فَالسّٰبِقٰتِ سَبۡقًا ۙ\u200F"},
{"verse_key":"79:5","id":5717,"text":"فَالۡمُدَبِّرٰتِ اَمۡرًا\u200B ۘ\u200F"},
{"verse_key":"79:6","id":5718,"text":"يَوۡمَ تَرۡجُفُ الرَّاجِفَةُ ۙ\u200F"},
{"verse_key":"79:7","id":5719,"text":"تَتۡبَعُهَا الرَّادِفَةُ ؕ\u200F"},
{"verse_key":"79:8","id":5720,"text":"قُلُوۡبٌ يَّوۡمَٮِٕذٍ وَّاجِفَةٌ ۙ\u200F"},
{"verse_key":"79:9","id":5721,"text":"اَبۡصَارُهَا خَاشِعَةٌ\u200B\u2002ۘ\u200F"},
{"verse_key":"79:10","id":5722,"text":"يَقُوۡلُوۡنَ ءَاِنَّا لَمَرۡدُوۡدُوۡنَ فِى الۡحَـافِرَةِ ؕ\u200F"},
{"verse_key":"79:11","id":5723,"text":"ءَاِذَا كُنَّا عِظَامًا نَّخِرَةً ؕ\u200F"},
{"verse_key":"79:12","id":5724,"text":"قَالُوۡا تِلۡكَ اِذًا كَرَّةٌ خَاسِرَةٌ\u200B\u2002ۘ\u200F"},
{"verse_key":"79:13","id":5725,"text":"فَاِنَّمَا هِىَ زَجۡرَةٌ وَّاحِدَةٌ\u2002ۙ\u200F"},
{"verse_key":"79:14","id":5726,"text":"فَاِذَا هُمۡ بِالسَّاهِرَةِ ؕ\u200F"},
{"verse_key":"79:15","id":5727,"text":"هَلۡ اَتٰٮكَ حَدِيۡثُ مُوۡسٰى\u200Bۘ\u200F"},
{"verse_key":"79:16","id":5728,"text":"اِذۡ نَادٰٮهُ رَبُّهٗ بِالۡوَادِ الۡمُقَدَّسِ طُوًى\u200Bۚ\u200F"},
{"verse_key":"79:17","id":5729,"text":"اِذۡهَبۡ اِلٰى فِرۡعَوۡنَ اِنَّهٗ طَغٰى\u2002ۖ\u200F"},
{"verse_key":"79:18","id":5730,"text":"فَقُلۡ هَلۡ لَّكَ اِلٰٓى اَنۡ تَزَكّٰى ۙ\u200F"},
{"verse_key":"79:19","id":5731,"text":"وَاَهۡدِيَكَ اِلٰى رَبِّكَ فَتَخۡشٰى\u200Bۚ\u200F"},
{"verse_key":"79:20","id":5732,"text":"فَاَرٰٮهُ الۡاٰيَةَ الۡكُبۡرٰى\u2002ۖ\u200F"},
{"verse_key":"79:21","id":5733,"text":"فَكَذَّبَ وَعَصٰى\u2002ۖ\u200F"},
{"verse_key":"79:22","id":5734,"text":"ثُمَّ اَدۡبَرَ يَسۡعٰىۖ\u200F"},
{"verse_key":"79:23","id":5735,"text":"فَحَشَرَ فَنَادٰىۖ\u200F"},
{"verse_key":"79:24","id":5736,"text":"فَقَالَ اَنَا رَبُّكُمُ الۡاَعۡلٰى\u2002ۖ\u200F"},
{"verse_key":"79:25","id":5737,"text":"فَاَخَذَهُ اللّٰهُ نَڪَالَ الۡاٰخِرَةِ وَالۡاُوۡلٰى ؕ\u200F"},
{"verse_key":"79:26","id":5738,"text":"اِنَّ فِىۡ ذٰلِكَ لَعِبۡرَةً لِّمَنۡ يَّخۡشٰىؕ\u200F"},
{"verse_key":"79:27","id":5739,"text":"ءَاَنۡتُمۡ اَشَدُّ خَلۡقًا اَمِ السَّمَآءُ\u200B ؕ بَنٰٮهَا\u200F"},
{"verse_key":"79:28","id":5740,"text":"رَفَعَ سَمۡكَهَا فَسَوَّٮهَا ۙ\u200F"},
{"verse_key":"79:29","id":5741,"text":"وَ اَغۡطَشَ لَيۡلَهَا وَاَخۡرَجَ ضُحٰٮهَا\u200F"},
{"verse_key":"79:30","id":5742,"text":"وَالۡاَرۡضَ بَعۡدَ ذٰلِكَ دَحٰٮهَا ؕ\u200F"},
{"verse_key":"79:31","id":5743,"text":"اَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعٰٮهَا\u200F"},
{"verse_key":"79:32","id":5744,"text":"وَالۡجِبَالَ اَرۡسٰٮهَا ۙ\u200F"},
{"verse_key":"79:33","id":5745,"text":"مَتَاعًا لَّـكُمۡ وَلِاَنۡعَامِكُمۡؕ\u200F"},
{"verse_key":"79:34","id":5746,"text":"فَاِذَا جَآءَتِ الطَّآمَّةُ الۡكُبۡرٰى\u2002ۖ\u200F"},
{"verse_key":"79:35","id":5747,"text":"يَوۡمَ يَتَذَكَّرُ الۡاِنۡسَانُ مَا سَعٰىۙ\u200F"},
{"verse_key":"79:36","id":5748,"text":"وَبُرِّزَتِ الۡجَحِيۡمُ لِمَنۡ يَّرٰى\u200F"},
{"verse_key":"79:37","id":5749,"text":"فَاَمَّا مَنۡ طَغٰىۙ\u200F"},
{"verse_key":"79:38","id":5750,"text":"وَاٰثَرَ الۡحَيٰوةَ الدُّنۡيَا ۙ\u200F"},
{"verse_key":"79:39","id":5751,"text":"فَاِنَّ الۡجَحِيۡمَ هِىَ الۡمَاۡوٰىؕ\u200F"},
{"verse_key":"79:40","id":5752,"text":"وَاَمَّا مَنۡ خَافَ مَقَامَ رَبِّهٖ وَ نَهَى النَّفۡسَ عَنِ الۡهَوٰىۙ\u200F"},
{"verse_key":"79:41","id":5753,"text":"فَاِنَّ الۡجَـنَّةَ هِىَ الۡمَاۡوٰىؕ\u200F"},
{"verse_key":"79:42","id":5754,"text":"يَسۡـــَٔلُوۡنَكَ عَنِ السَّاعَةِ اَيَّانَ مُرۡسٰٮهَا ؕ\u200F"},
{"verse_key":"79:43","id":5755,"text":"فِيۡمَ اَنۡتَ مِنۡ ذِكۡرٰٮهَاؕ\u200F"},
{"verse_key":"79:44","id":5756,"text":"اِلٰى رَبِّكَ مُنۡتَهٰٮهَاؕ\u200F"},
{"verse_key":"79:45","id":5757,"text":"اِنَّمَاۤ اَنۡتَ مُنۡذِرُ مَنۡ يَّخۡشٰٮهَاؕ\u200F"},
{"verse_key":"79:46","id":5758,"text":"كَاَنَّهُمۡ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُوۡۤا اِلَّا عَشِيَّةً اَوۡ ضُحٰٮهَا\u200F ﻿﻿"}]}