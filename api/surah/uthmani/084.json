{"surah":"84", "verses": [{"verse_key":"84:1","id":5885,"text":" إِذَا ٱلسَّمَآءُ ٱنشَقَّتْ"},
{"verse_key":"84:2","id":5886,"text":"وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ"},
{"verse_key":"84:3","id":5887,"text":"وَإِذَا ٱلْأَرْضُ مُدَّتْ"},
{"verse_key":"84:4","id":5888,"text":"وَأَلْقَتْ مَا فِيهَا وَتَخَلَّتْ"},
{"verse_key":"84:5","id":5889,"text":"وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ"},
{"verse_key":"84:6","id":5890,"text":"يَـٰٓأَيُّهَا ٱلْإِنسَـٰنُ إِنَّكَ كَادِحٌ إِلَىٰ رَبِّكَ كَدْحًا فَمُلَـٰقِيهِ"},
{"verse_key":"84:7","id":5891,"text":"فَأَمَّا مَنْ أُوتِىَ كِتَـٰبَهُۥ بِيَمِينِهِۦ"},
{"verse_key":"84:8","id":5892,"text":"فَسَوْفَ يُحَاسَبُ حِسَابًا يَسِيرًا"},
{"verse_key":"84:9","id":5893,"text":"وَيَنقَلِبُ إِلَىٰٓ أَهْلِهِۦ مَسْرُورًا"},
{"verse_key":"84:10","id":5894,"text":"وَأَمَّا مَنْ أُوتِىَ كِتَـٰبَهُۥ وَرَآءَ ظَهْرِهِۦ"},
{"verse_key":"84:11","id":5895,"text":"فَسَوْفَ يَدْعُوا۟ ثُبُورًا"},
{"verse_key":"84:12","id":5896,"text":"وَيَصْلَىٰ سَعِيرًا"},
{"verse_key":"84:13","id":5897,"text":"إِنَّهُۥ كَانَ فِىٓ أَهْلِهِۦ مَسْرُورًا"},
{"verse_key":"84:14","id":5898,"text":"إِنَّهُۥ ظَنَّ أَن لَّن يَحُورَ"},
{"verse_key":"84:15","id":5899,"text":"بَلَىٰٓ إِنَّ رَبَّهُۥ كَانَ بِهِۦ بَصِيرًا"},
{"verse_key":"84:16","id":5900,"text":"فَلَآ أُقْسِمُ بِٱلشَّفَقِ"},
{"verse_key":"84:17","id":5901,"text":"وَٱلَّيْلِ وَمَا وَسَقَ"},
{"verse_key":"84:18","id":5902,"text":"وَٱلْقَمَرِ إِذَا ٱتَّسَقَ"},
{"verse_key":"84:19","id":5903,"text":"لَتَرْكَبُنَّ طَبَقًا عَن طَبَقٍ"},
{"verse_key":"84:20","id":5904,"text":"فَمَا لَهُمْ لَا يُؤْمِنُونَ"},
{"verse_key":"84:21","id":5905,"text":"وَإِذَا قُرِئَ عَلَيْهِمُ ٱلْقُرْءَانُ لَا يَسْجُدُونَ ۩"},
{"verse_key":"84:22","id":5906,"text":"بَلِ ٱلَّذِينَ كَفَرُوا۟ يُكَذِّبُونَ"},
{"verse_key":"84:23","id":5907,"text":"وَٱللَّهُ أَعْلَمُ بِمَا يُوعُونَ"},
{"verse_key":"84:24","id":5908,"text":"فَبَشِّرْهُم بِعَذَابٍ أَلِيمٍ"},
{"verse_key":"84:25","id":5909,"text":"إِلَّا ٱلَّذِينَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّـٰلِحَـٰتِ لَهُمْ أَجْرٌ غَيْرُ مَمْنُونٍۭ"}]}